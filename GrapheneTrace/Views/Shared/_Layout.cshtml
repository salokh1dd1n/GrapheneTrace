@{
    var title = ViewData["Title"] ?? "GrapheneTrace Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - GrapheneTrace</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GrapheneTrace.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="app-wrapper">
        <!-- SIDEBAR -->
        <nav id="sidebar" class="bg-dark text-white">
            <div class="sidebar-header p-3">
                <h4 class="mb-0">GrapheneTrace</h4>
                <small class="text-muted">Admin Panel</small>
            </div>
            <hr class="border-secondary my-0" />

            <ul class="nav flex-column p-2">
                <li class="nav-item mb-1">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                        <span class="me-2">🏠</span> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link text-white" asp-controller="Patients" asp-action="Index">
                        <span class="me-2">🧑‍⚕️</span> Patients
                    </a>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link text-white" asp-controller="Clinicians" asp-action="Index">
                        <span class="me-2">👨‍⚕️</span> Clinicians
                    </a>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                        <span class="me-2">⚙️</span> Admin
                    </a>
                </li>

                <!-- If later you add login: -->
                @* 
                <li class="nav-item mt-3">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-sm btn-outline-light w-100">Logout</button>
                    </form>
                </li>
                *@
            </ul>
        </nav>

        <!-- MAIN CONTENT -->
        <div id="content-wrapper" class="flex-grow-1">
            <header class="border-bottom bg-white">
                <div class="container-fluid py-2 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@title</h5>
                    @* You can put user info/top-right actions here later *@
                </div>
            </header>

            <main class="container-fluid mt-3">
                @RenderBody()
            </main>

            @* <footer class="border-top mt-4"> *@
            @*     <div class="container-fluid py-2 text-muted small"> *@
            @*         &copy; @DateTime.Now.Year - GrapheneTrace *@
            @*     </div> *@
            @* </footer> *@
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>