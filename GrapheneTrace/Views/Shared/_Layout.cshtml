@using Microsoft.AspNetCore.Identity
@using GrapheneTrace.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var title = ViewData["Title"] ?? "GrapheneTrace";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - GrapheneTrace</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          integrity="sha512-H4ZLbjq7wYpZhj8R0HSKRm7o6WZn6sIRG3nGq2uI0KNXlELMNsAb6lKjfv7TJLdnOjFkWDXLI4sdAl4k2B8tJQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex" id="app-wrapper">

        <!-- SIDEBAR PARTIAL -->
        @await Html.PartialAsync("_Sidebar")

        <!-- MAIN CONTENT -->
        <div id="content-wrapper" class="flex-grow-1">

            <header class="bg-white border-bottom">
                <div class="container-fluid py-2">
                    <h5 class="mb-0">@title</h5>
                </div>
            </header>

            <main class="container-fluid mt-3">
                @RenderBody()
            </main>
        </div>
    </div>
}
else
{
    <!-- No sidebar for Login / AccessDenied -->
    <main class="container py-5">
        @RenderBody()
    </main>
}

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/site.js"></script>
@RenderSection("Scripts", false)

</body>
</html>