@using Microsoft.AspNetCore.Identity
@inject SignInManager<GrapheneTrace.Models.ApplicationUser> SignInManager
@inject UserManager<GrapheneTrace.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - GrapheneTrace</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
@if (!SignInManager.IsSignedIn(User))
{
    <!-- Public layout (e.g. Login) - no sidebar, no footer -->
    <main class="container mt-5">
        @RenderBody()
    </main>
}
else
{
    <!-- Authenticated layout with sidebar -->
    <div class="d-flex">
        <nav class="bg-dark text-white vh-100 p-3" style="width: 240px;">
            <h4 class="mb-4">GrapheneTrace</h4>

            <ul class="nav flex-column mb-4">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Admins">Admins</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Clinicians">Clinicians</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Admin" asp-action="Patients">Patients</a>
                    </li>
                }
                else if (User.IsInRole("Patient"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Patient" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Patient" asp-action="Profile">My Profile</a>
                    </li>
                }
                else if (User.IsInRole("Clinician"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Clinician" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Clinician" asp-action="Patients">Patients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Clinician" asp-action="Profile">My Profile</a>
                    </li>
                }
            </ul>

            <form asp-controller="Account"
                  asp-action="Logout"
                  method="post"
                  class="mt-auto">
                <button type="submit" class="btn btn-outline-light w-100">
                    Logout
                </button>
            </form>
        </nav>

        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>