@* @model GrapheneTrace.Models.Clinician *@
@* *@
@* @{ *@
@*     ViewData["Title"] = "Clinician Details"; *@
@* } *@
@* *@
@* <div class="container mt-4"> *@
@*     <div class="card shadow-sm"> *@
@*         <div class="card-header d-flex justify-content-between align-items-center"> *@
@*             <h4 class="mb-0">Clinician Details</h4> *@
@*             <div> *@
@*                 <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a> *@
@*                 <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back to list</a> *@
@*             </div> *@
@*         </div> *@
@*         <div class="card-body"> *@
@*             <h5 class="mb-3">Account Information</h5> *@
@*             <dl class="row"> *@
@*                 <dt class="col-sm-3">Username</dt> *@
@*                 <dd class="col-sm-9">@Model.User.Username</dd> *@
@* *@
@*                 <dt class="col-sm-3">Name</dt> *@
@*                 <dd class="col-sm-9">@Model.User.FirstName @Model.User.LastName</dd> *@
@* *@
@*                 <dt class="col-sm-3">Email</dt> *@
@*                 <dd class="col-sm-9">@Model.User.Email</dd> *@
@*             </dl> *@
@* *@
@*             <h5 class="mt-4 mb-3">Clinician Information</h5> *@
@*             <dl class="row"> *@
@*                 <dt class="col-sm-3">Specialisation</dt> *@
@*                 <dd class="col-sm-9">@Model.Specialisation</dd> *@
@* *@
@*                 <dt class="col-sm-3">Registration #</dt> *@
@*                 <dd class="col-sm-9">@Model.RegistrationNumber</dd> *@
@* *@
@*                 <dt class="col-sm-3">Patient Access</dt> *@
@*                 <dd class="col-sm-9"> *@
@*                     @if (Model.AccessAllPatients) *@
@*                     { *@
@*                         <span class="badge bg-success">Access to all patients</span> *@
@*                     } *@
@*                     else *@
@*                     { *@
@*                         <span class="badge bg-secondary"> *@
@*                             Selected patients (@Model.PatientLinks?.Count ?? 0) *@
@*                         </span> *@
@*                     } *@
@*                 </dd> *@
@*             </dl> *@
@* *@
@*             @if (!Model.AccessAllPatients) *@
@*             { *@
@*                 <h5 class="mt-4 mb-2">Assigned Patients</h5> *@
@* *@
@*                 @if (Model.PatientLinks != null && Model.PatientLinks.Any()) *@
@*                 { *@
@*                     <div class="table-responsive"> *@
@*                         <table class="table table-sm table-striped"> *@
@*                             <thead> *@
@*                                 <tr> *@
@*                                     <th>Name</th> *@
@*                                     <th>Email</th> *@
@*                                     <th>Date of Birth</th> *@
@*                                 </tr> *@
@*                             </thead> *@
@*                             <tbody> *@
@*                             @foreach (var link in Model.PatientLinks) *@
@*                             { *@
@*                                 var p = link.Patient; *@
@*                                 <tr> *@
@*                                     <td>@p.User.FirstName @p.User.LastName</td> *@
@*                                     <td>@p.User.Email</td> *@
@*                                     <td>@p.DateOfBirth?.ToShortDateString()</td> *@
@*                                 </tr> *@
@*                             } *@
@*                             </tbody> *@
@*                         </table> *@
@*                     </div> *@
@*                 } *@
@*                 else *@
@*                 { *@
@*                     <p class="text-muted">No patients assigned.</p> *@
@*                 } *@
@*             } *@
@*         </div> *@
@*     </div> *@
@* </div> *@