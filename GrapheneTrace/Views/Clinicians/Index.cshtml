@model IEnumerable<GrapheneTrace.Models.Clinician>

@{
    ViewData["Title"] = "Clinicians";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Clinicians</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Clinician</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No clinicians found. Click <strong>Create New Clinician</strong> to add one.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Specialisation</th>
                            <th>Patient Access</th>
                            <th style="width: 220px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.User.Username</td>
                            <td>@c.User.FirstName @c.User.LastName</td>
                            <td>@c.User.Email</td>
                            <td>@c.Specialisation</td>
                            <td>
                                @if (c.AccessAllPatients)
                                {
                                    <span class="badge bg-success">All patients</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Selected (@c.PatientLinks.Count)</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>