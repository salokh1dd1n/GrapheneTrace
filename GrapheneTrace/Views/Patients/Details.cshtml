@model GrapheneTrace.Models.Patient

<h2>Delete Patient</h2>

<p>Are you sure you want to delete this patient?</p>

<p>
    <strong>Username:</strong> @Model.User.Username<br />
    <strong>Name:</strong> @Model.User.FirstName @Model.User.LastName<br />
    <strong>Email:</strong> @Model.User.Email<br />
    <strong>Date of Birth:</strong> @Model.DateOfBirth?.ToShortDateString()
</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>