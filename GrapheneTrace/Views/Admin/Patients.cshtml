@model IEnumerable<GrapheneTrace.Models.Patient>

@{
    ViewData["Title"] = "Patients";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Patients</h2>
    <a asp-action="CreatePatient" class="btn btn-primary">Create Patient</a>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Date of birth</th>
        <th style="width: 170px;">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@(p.User?.FirstName) @(p.User?.LastName)</td>
            <td>@p.User?.Email</td>
            <td>@(p.DateOfBirth?.ToString("yyyy-MM-dd"))</td>
            <td>
                <a asp-action="EditPatient"
                   asp-route-id="@p.UserId"
                   class="btn btn-sm btn-outline-secondary">Edit</a>
                <a asp-action="DeleteUser"
                   asp-route-id="@p.UserId"
                   class="btn btn-sm btn-outline-danger ms-1">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>