@model IEnumerable<GrapheneTrace.Models.Alert>

@{
    ViewData["Title"] = "Alerts";
}

<div class="container mt-4">
    <h3 class="mb-3">High Pressure Alerts</h3>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-3">
                    <p class="mb-0 text-muted">No alerts to review.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Patient</th>
                                <th>Severity</th>
                                <th>Message</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var alert in Model)
                        {
                            <tr>
                                <td>@alert.Frame.Timestamp.ToLocalTime().ToString("g")</td>
                                <td>
                                    @alert.Frame.Patient.User.FirstName @alert.Frame.Patient.User.LastName
                                </td>
                                <td>
                                    @switch (alert.Severity)
                                    {
                                        case GrapheneTrace.Models.AlertSeverity.Critical:
                                            <span class="badge bg-danger">Critical</span>
                                            break;
                                        case GrapheneTrace.Models.AlertSeverity.Warning:
                                            <span class="badge bg-warning text-dark">Warning</span>
                                            break;
                                        default:
                                            <span class="badge bg-info">Info</span>
                                            break;
                                    }
                                </td>
                                <td>@alert.Message</td>
                                <td>
                                    <a asp-action="Frame"
                                       asp-route-id="@alert.FrameId"
                                       class="btn btn-sm btn-outline-primary">
                                        View frame
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>